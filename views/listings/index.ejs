<% layout("/layouts/boilerplate") %>

<body>
  <h2>All Listings</h2>
  <br />
  <form method="GET" action="/listings/new">
  </form>
  <br />
  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
    <% for(let listings of allListings) { %>
    <a href="/listings/<%= listings._id %>" class="listing-link">
      <div class="card col" >
        <img
          src="<%= listings.image %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
          ;
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listings.title %></b> <br/>
            &#8377;  <%= listings.price.toLocaleString("en-IN") %>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
